<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto_Integrador.pages.Css"
             Title="CSS"
             BackgroundColor="#3E187A">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackLayout>
            <StackLayout>
                <Label Text="Configuração de Serviços e Servidores" TextColor="White" FontSize="35" HorizontalTextAlignment="Start" Margin="20"/>
            </StackLayout>

            <StackLayout>
                <Label Text="WINDOWS" TextColor="White" FontSize="20" FontAttributes="Bold"  Margin="20,30,0,0"/>
            </StackLayout>

            <ScrollView Grid.Row="2" Orientation="Horizontal">
                <StackLayout Orientation="Horizontal">
                    <ImageButton Source="ComandsWin" CornerRadius="15" Margin="10,0,0,0"  BorderWidth="1"/>
                    <ImageButton Source="maquinaWin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="shellWin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="dhcpWin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="dnsWin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="iisWin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="addsWin" CornerRadius="15"  Margin="0,0,10,0"  BorderColor="black" BorderWidth="1"/>
                </StackLayout>

            </ScrollView>

            <StackLayout Grid.Row="3">
                <Label Text="LINUX" TextColor="White" FontSize="20" FontAttributes="Bold"  Margin="20,30,0,0"/>
            </StackLayout>

            <ScrollView Orientation="Horizontal" Grid.Row="4">
                <StackLayout Orientation="Horizontal">
                    <ImageButton Source="terminalLin" CornerRadius="15" Margin="10,0,0,0" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="maquinaWin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="shellLin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="ftpLin" CornerRadius="15" BorderColor="black" BorderWidth="1"/>
                    <ImageButton Source="dhcpWin" CornerRadius="15" BorderColor="black" BorderWidth="1" Clicked="ImageButton_Clicked"/>
                    <ImageButton Source="httpLin" CornerRadius="15"  Margin="0,0,10,0"  BorderColor="black" BorderWidth="1"/>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>