<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto_Integrador.pages.Redes"
             Title="Redes"
             BackgroundColor="#3E187A">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackLayout>

            <StackLayout>
                <Label Text="Redes de Computadores" TextColor="White" FontSize="35" HorizontalTextAlignment="Start" Margin="20"
                       FontAttributes="Bold"/>
            </StackLayout>

            <StackLayout>
                <Label Text="Tópico 1" TextColor="White" FontSize="20" FontAttributes="Bold" Margin="20,30,0,0"/>
            </StackLayout>

            <ScrollView Grid.Row="2" Orientation="Horizontal">
                <StackLayout Orientation="Horizontal">
                    <ImageButton Source="osimodel.png" CornerRadius="15" Margin="10,0,0,0" BorderColor="Transparent" BorderWidth="1"
                                 Clicked="ImageButton_Clicked"/>
                </StackLayout>
            </ScrollView>
            
        </StackLayout>

    </Grid>
</ContentPage>